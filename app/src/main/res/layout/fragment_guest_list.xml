<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuestListFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/guest_list"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="20dp"
        android:background="@drawable/round_button"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="0/8 confirmed"/>

    <View
        android:id="@+id/arrival_approved_circle"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/guest_list"
        android:layout_marginStart="55dp"
        android:background="@drawable/green_circle" />

    <TextView
        android:id="@+id/arrival_approved_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guest_list"
        android:layout_toRightOf="@id/arrival_approved_circle"
        android:layout_marginStart="5dp"
        android:text="@string/arrival_approved" />

    <View
        android:id="@+id/not_coming_circle"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/guest_list"
        android:layout_toRightOf="@id/arrival_approved_text"
        android:layout_marginStart="25dp"
        android:background="@drawable/red_circle" />

    <TextView
        android:id="@+id/not_coming_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guest_list"
        android:layout_toRightOf="@id/not_coming_circle"
        android:layout_marginStart="5dp"
        android:text="@string/confirmed_not_coming" />

</RelativeLayout>